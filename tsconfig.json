{
  "compilerOptions": {
    "target": "es2021",
    "outDir": "./dist",
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ]
}
